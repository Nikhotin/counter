extends layout

.header
  block header
    a.button(href="/counter/:id") Your counter
    a.button(href="/counter") All counter
    a.button#active(href="/profile/:id") Profile
.sidebar-left
.main
  block main
    form(method='POST' action='/user/id')
      div
        input(type='hidden', name='userId', value=userId)
        label(for='password') Password
        input(type='password' placeholder='password' name='password')
      button(type='submit') Change password
.sidebar-right
.footer
  block footer
    form(action='/logout')
      button(type='submit') Log out
